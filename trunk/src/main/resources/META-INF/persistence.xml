         <property name="hibernate.connection.url" value="jdbc:oracle:thin:@localhost:1521:orcl"/>
         <property name="hibernate.connection.username" value="darex"/>
         <property name="hibernate.connection.password" value="darex"/>   -->
      </properties>

   </persistence-unit>
</persistence>